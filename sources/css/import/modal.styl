.modal
    font-weight 300
    color black
    img
        max-width: 100%
    .text
        min-height: 400px
        font-size 16px
        padding-top 15px
        .text__image
            max-width: 100%
            @media (min-width: scr_sm)
                float: right
                margin-bottom 30px
                margin-left 30px
                max-width: 50%
        img
            max-width: 100%
        a
            color orange
            border-line(alpha(@color, .4))
    &-backdrop.in
        opacity: .7
    &-dialog
        @media (min-width: scr_sm)
            width 740px
        @media (min-width: scr_md)
            width 800px
    &-content
        padding 55px 20px 30px
        border-radius: 0
        background-color white
        @media (min-width: scr_sm)
            padding 35px 40px 30px
    &__close
        position absolute
        top 30px
        right 15px
        img
            max-width 30px
            @media (min-width: scr_sm)
                max-width: none
        @media (min-width: scr_sm)
            right 35px
    &__title
        margin-top 0
        font-size 25px
        margin-bottom 35px
        font-weight bold
        @media (min-width: scr_sm)
            font-size 30px
        @media (min-width: scr_md)
            font-size 45px
