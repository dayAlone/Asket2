.dropdown
    position relative
    height 40px
    min-width: 127px
    margin-bottom 30px
    &__frame
        position absolute
        top 100%
        background-color blue
        width 100%
        padding 3px 0px 2px
        opacity: 0
        transition: .3s opacity .1s, .3s transform .1s, .3s visibility .1s
        visibility: hidden
        z-index: 10
        transform: translateY(-40px)
        max-height: 400px
        overflow: auto
    &__select
        opacity 0
        position absolute
        z-index -1
        pointer-events none
        top 0
        left 0
        width 100%
        min-height 40px
        opacity: 0
        z-index 200
    &__item
        color white
        width 100%
        line-height 2
        display block
        font-size 14px
        padding: 4px 16px 0
        @media (min-width: 1600px)
            font-size 15px
        &:hover, &:focus
            background-color alpha(white,.1)
            color white
    &__trigger
        padding 0 15px
        width 100%
        line-height 42px
        height 40px
        cursor: pointer
        color #5d6776
        font-size 15px
        position relative
        z-index: 20
        display block
        border 1px solid #b2b6bc
        transition-delay: .3s
        background-color #fafafa
        @media (min-width: 1600px)
            font-size 18px
        .parsley-error ~ &
            border-color alpha(red, .5)
        &:after
            content ""
            top: 50%
            left: 100%
            border: solid transparent
            content: " "
            height: 0
            width: 0
            position: absolute
            pointer-events: none
            border-color: rgba(0, 0, 0, 0)
            border-top-color: #237acb
            border-width: 11px
            transform: translateX(-50%) scaleX(.6)
            margin-left -20px
            margin-top -4px
            transition: .3s border .3s
    &:not(^[0]--inactive):hover
        & ^[0]__trigger
            color white
            background-color blue
            transition-delay: 0s
            border-color: blue
            &:after
                transition-delay: 0s
                border-top-color: white
        & ^[0]__frame
            visibility: visible
            opacity: 1
            transform: translateY(0)
