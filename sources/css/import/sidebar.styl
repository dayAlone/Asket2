.sidebar

    background-color: #edeef0
    display: flex
    flex-direction: column
    justify-content: space-between
    min-width: 220px
    @media (min-width: 1600px)
        min-width: 300px
    &__copyright, &__address
        font-size 11px
        color: alpha(black, .5)
    &__link
        color black

        font-weight bold
        margin-bottom 3px
        white-space: nowrap
        font-size 16px
        @media (min-width: 1600px)
            font-size 18px
        &:hover
            color blue
    &__button
        display flex
        min-height: 37px
        text-align center
        border: 2px solid white
        width: 100%
        color white
        text-transform uppercase
        font-weight bold
        text-align center
        justify-content: center;
        align-items: center
        letter-spacing: 7px
        font-size 10px
        transition: .3s all
        text-align center
        padding-top 1px
        &:focus
            color white
        &:hover
            background-color white
            color blue
            transform: translate3d(4px, -4px, 0)
            box-shadow: -4px 4px 0 0 alpha(black, .4)
            letter-spacing: 0
        &:active
            box-shadow: 1px -1px 0 0 alpha(black, .4)
            transform: translate3d(0px, 0px, 0)
    &__header,
    &__footer,
    &__content

        display: flex
        flex-direction: column
        padding: 30px 30px
        @media (min-width: 1600px)
            padding: 30px 45px
    &__header
        height: 100px
        background-color blue

        justify-content: center
    &__content
        flex: 1
        padding-top 80px

    &__footer
        .page--index &
            display none
        &:before
            content: ""
            position relative
            display block
            width: 57px
            height: 3px
            margin-bottom 25px
            background-color: #606776



.lang
    margin 20px 0 27px
    display: flex
    &__item
        size 46px 22px
        padding-top 1px
        border: 1px solid blue
        margin-right 5px
        display inline-flex
        justify-content: center
        align-items: center
        text-transform uppercase
        font-weight bold
        font-size 10px
        color blue
        &--active, &:hover
            background-color blue
            color white
