.slider
    position absolute
    size 100%
    z-index: 1
    top 0
    left 0
    &__item
        width: 100%
        height 100vh
        position relative
        display: flex !important
        flex-direction: column
        justify-content: center
        padding-top 100px
        padding-bottom 300px
        color white
        overflow hidden
    &__dots
        position absolute
        z-index: 20
        bottom: 100px
        right: 60px
        display: flex !important
        list-style: none

        button
            size 14px
            outline: 0
            overflow hidden
            text-indent: -100px
            border: 1px solid blue
            background none
            appearance none
            border-radius: 50%
            margin-left 13px
            transition: .3s background
        .slick-active button, button:hover
                background-color blue
    &__title
        color white
        display block

        font-weight bold
        line-height 1
        min-height: min-content
        font-size 80px
        @media (min-width: 1600px)
            font-size 100px
    &__text
        font-weight: 500

        line-height 1.1
        border-top 1px solid white
        align-self: flex-start
        padding-top 15px
        font-size 24px
        @media (min-width: 1600px)
            font-size 28px
    &__button
        height 50px
        border: 2px solid white
        align-self: flex-start
        margin-top 25px
        text-transform uppercase
        font-size 15px
        color white
        display: flex
        align-items: center
        font-weight bold
        padding: 1px 30px 0
        letter-spacing: 4px
        transition: .3s all
        &:hover
            background-color white
            color blue
            transform: translate3d(4px, -4px, 0)
            box-shadow: -4px 4px 0 0 alpha(black, .3)

    &__content
        padding 60px
        display: flex
        flex-direction: column
        opacity: 0
        transform: translateX(-50%)
        transition: .6s opacity 1.1s, .6s transform .8s
        .slick-current &
            opacity: 1
            transform: translateX(0%)
    &__image
        position absolute
        size 100%
        background-size cover
        top 0
        left 0
        z-index: -1
        &:after
            position absolute
            content ""
            size 100%
            background alpha(black, .25)
