.text
    font-weight 300
    font-size 15px
    line-height 1.45

    @media (min-width: 1600px)
        font-size 16px
        line-height 1.65

    h2, h3
        font-weight bold
        color black
        &:first-child
            margin-top 0
    h3
        font-size 20px
    h2
        font-size 30px
        margin-bottom 25px
    ul, ol
        padding-left 25px
        margin-bottom 25px
        margin-top 10px
    p
        margin-bottom 20px
        color #3a3a3a
        a
            color blue

    span.blue
        color blue
    .map
        min-height: 510px
        width: 100%
        margin-top 35px
    img
        max-width: 100%
        &.right
            float right
            margin-left 20px
            margin-bottom 30px
        &.left
            float left
            margin-right 20px
            margin-bottom 30px
    blockquote
        display inline-block
        border: 4px solid #a9d5f0
        font-size 15px
        font-weight bold
        padding: 18px 23px 15px
        line-height 1.7

.point
    display: flex
    flex-wrap: wrap
    margin-bottom 20px
    &__text
        flex-basis: 100%
        padding-top 10px
        margin-left 60px
    &__title
        padding-top 8px
        font-size 20px
        font-weight bold
        color blue
        flex-basis: calc(100% - 65px)
        line-height 1.3
    &__number
        font-size 20px
        font-weight 700
        color white
        background-color blue
        min-width: 40px
        height: 40px
        padding-top 2px
        border-radius: 50%
        display: flex
        justify-content: center;
        align-items: center;
        margin-right 20px
