.form
    .parsley-errors-list
        display none
    .row
        margin-right -15px
        margin-left -15px
        [class*='col-']
            padding 0 15px
    &__refresh
        svg
            size 35px
            margin-top 26px
            path
                fill blue
    &__radio:checked + &__label
        &:before
            background-color blue
    &__radio + &__label
        margin-right 25px
        font-size 18px
        font-weight normal
        color #636464
        &:before
            content ""
            size 20px
            border-radius: 20px
            display inline-block
            border: 1px solid #b2b6bc
            vertical-align middle
            margin-right 10px
            position relative
            top -2px
            box-shadow: inset 0 0 0 3px #edeef0
            transition: .3s background
    &__label
        font-size 14px
        font-weight 300
        @media (min-width: 1600px)
            font-size 16px
    &__small
        color alpha(black, .5)
        white-space: nowrap
        font-size 10px
        line-height 1.3
        margin-top 28px
        display inline-block
        @media (min-width: 1600px)
            font-size 12px
            line-height 1.3
            margin-top 33px
    &__radio
        display none
    &__button
        border 0
        height: 40px
        background-color: blue
        padding 0 40px
        color white
        font-size 18px
        min-width: 145px
        padding-top 4px
        margin-top 20px
        width: 100%
        transition: .3s all
        letter-spacing: 4px
        &:hover
            @extend .sidebar__button:hover
            background-color: blue
            color: white

    &__footer
        margin-top 50px

    &__select + img
        position absolute
        top 15px
        pointer-events: none
        right 20px

    &__input, &__captcha, &__select, &__textarea
        resize: none
        height: 40px
        appearance: none
        border-radius: 0
        box-shadow: none
        border: 1px solid #b2b6bc
        font-size 15px
        line-height 42px
        padding 0px 15px
        width 100%
        margin-bottom 30px
        transition: .3s border
        background-size contain
        background-color #fafafa
        background-position center center
        background-repeat no-repeat
        @media (min-width: 1600px)
            font-size 18px
        &.parsley-error
            border-color alpha(red, .5)
        &:focus
            border-color blue
            outline: 0
            background-color #fff
    &__captcha
        background-color white
    &__textarea
        min-height: 160px
        line-height: 1.3
